  <par><name>sCC</name><note><![CDATA[]]></note></par>
  <par><name>sFR</name><note><![CDATA[]]></note></par>
  <par><name>sFRI</name><note><![CDATA[]]></note></par>
  <par><name>sRCell</name><note><![CDATA[]]></note></par>
  <par><name>sFC</name><note><![CDATA[]]></note></par>
  <par><name>sFCI</name><note><![CDATA[]]></note></par>
  <par><name>sCCell</name><note><![CDATA[]]></note></par>
  <par><name>sTC</name><note><![CDATA[]]></note></par>
  <par><name>sCellT</name><note><![CDATA[]]></note></par>
</parameters>

